@model Car

<section class="singleOffer">
    <div class="container-sm">
        <form asp-action="Create" class="row" style="display: flex; flex-direction: column; align-items: center;">
            <div class="col-xs-12 col-md-8" style="display: flex; gap: 5px 2px; flex-direction: column; align-items: center; justify-content: center;">
                <label asp-for="@Model.CarName" style="width: fit-content;">Marka Auta</label>
                <input asp-for="@Model.CarName" placeholder="Marka Auta" style="width: 100%; padding: 5px; border-radius: 1rem; font-size: 20px; max-width: 400px;"/>
                <label asp-for="@Model.CarModel" style="width: fit-content;">Model Auta</label>
                <input asp-for="@Model.CarModel" placeholder="Model Auta" style="width: 100%; padding: 5px; border-radius: 1rem; font-size: 20px; max-width: 400px;"/>
                <label asp-for="@Model.CarOrigin" style="width: fit-content;">Kraj Pochodzenia Auta</label>
                <input asp-for="@Model.CarOrigin" placeholder="Kraj Pochodzenia" style="width: 100%; padding: 5px; border-radius: 1rem; font-size: 20px; max-width: 400px;"/>
                <label asp-for="@Model.CarYear" style="width: fit-content;">Rocznik Auta</label>
                <input asp-for="@Model.CarYear" placeholder="Rocznik auta" style="width: 100%; padding: 5px; border-radius: 1rem; font-size: 20px; max-width: 400px;"/>
                <label asp-for="@Model.CarPrice" style="width: fit-content;">Cena Auta (zł/dzień)</label>
                <input asp-for="@Model.CarPrice" placeholder="Cena auta (zł/dzień)" style="width: 100%; padding: 5px; border-radius: 1rem; font-size: 20px; max-width: 400px;"/>
                <label asp-for="@Model.CarPicture" style="width: fit-content;">Zdjęcie Auta (ścieżka)</label>
                <input asp-for="@Model.CarPicture" placeholder="Zdjęcie Auta (ścieżka)" value="/images/" style="width: 100%; padding: 5px; border-radius: 1rem; font-size: 20px; max-width: 400px;"/>
                <label asp-for="@Model.CarDescription" style="width: fit-content;">Opis Auta</label>
                <textarea asp-for="@Model.CarDescription" placeholder="Opis auta" style="padding: 5px; border-radius: 1rem; font-size: 20px;" rows="10" cols="45">@Model.CarDescription</textarea>
            </div>
            <button type="submit" value="Create" style="padding: 10px 25px; border-radius: 1rem; background-color: #2ecc71; border-color: #2ecc71;">Dodaj <i class="fas fa-save"></i></button> 
            <a asp-action="Index" style="text-decoration: none; color: white; background-color: #6f42c1; padding: 10px 25px; border-radius: 1rem; margin: 5px auto; width: 120px; text-align: center;"><i class="fas fa-arrow-left"></i> Powrót</a>
        </form>
    </div>
</section>