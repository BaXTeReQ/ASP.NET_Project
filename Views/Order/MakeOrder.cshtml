@model Order

<section class="confirmation">
    <div class="container-sm">
        <div class="row" style="display: flex; flex-direction: row; flex-wrap: wrap; align-items: center;">
            <div class="col-xs-12 col-md-6">
                <img src="@Model.Car.CarPicture" alt="@Model.Car.CarName @Model.Car.CarModel" />
            </div>
            <div class="col-xs-12 col-md-6" style="text-align:center;">
                <h2>Zamówiono</h2>
                <p>Cena zamówienia: @Model.OrderPrice zł</p>
                <p>@Model.Car.CarName @Model.Car.CarModel</p>
            </div>
        <a type="button" href="@Url.Action("Index", "Home")">Strona główna</a>
        </div>
    </div>
</section>