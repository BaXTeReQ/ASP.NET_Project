@model IEnumerable<Order>

    <section class="row">
        <div class="col-xs-12 col-md-10" style="text-align:center; display: flex; gap: 15px; flex-direction: column; margin: 15px auto;">
            @foreach (var item in Model)
            {
                <div style="text-align:center; color: black; display: flex; align-items: center; flex-direction: row; flex-wrap: wrap;" class="middle-md">
                    <img src="@item.Car.CarPicture" alt="@item.Car.CarName @item.Car.CarModel" class="col-xs-12 col-sm-4" />
                    <p class="col-xs-12 col-sm-4" style="height: fit-content;">@item.Car.CarName @item.Car.CarModel</p>
                    <p class="col-xs-12 col-sm-4" style="height: fit-content;">@item.OrderPrice zł</p>
                </div>

            }
            @if (Model.Count() == 0)
            {
                <h2 style="color: black;">Nie masz obecnie żadnych zamówień</h2>
            }
        </div>
    </section>

    <section class="logForm">
        <form style="border:none;" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-dark">Wyloguj się</button>
        </form>
    </section>